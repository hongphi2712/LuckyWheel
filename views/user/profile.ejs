<div  class="row">
  <div class="col-md-4 mb-4 mb-md-0">
    <div class="card border-0 shadow text-center">
      <div class="card-body p-4">
        <div class="mb-3">
          <div class="avatar-circle mx-auto">
            <span class="avatar-text"><%= user.name.charAt(0).toUpperCase() %></span>
          </div>
        </div>
        <h3 class="mb-1"><%= user.name %></h3>
        <p class="text-muted mb-4"><%= user.email %></p>
        <div class="d-grid">
          <a href="/user/history" class="btn btn-outline-primary">
            <i class="fas fa-history me-2"></i>View Spin History
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card border-0 shadow">
      <div class="card-header bg-white py-3">
        <h3 class="mb-0">Profile Information</h3>
      </div>
      <div class="card-body p-4">
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0 text-muted">Full Name</p>
          </div>
          <div class="col-sm-9">
            <p class="mb-0"><%= user.name %></p>
          </div>
        </div>
        <hr>
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0 text-muted">Email</p>
          </div>
          <div class="col-sm-9">
            <p class="mb-0"><%= user.email %></p>
          </div>
        </div>
        <hr>
        <div class="row mb-3">
          <div class="col-sm-3">
            <p class="mb-0 text-muted">Phone</p>
          </div>
          <div class="col-sm-9">
            <p class="mb-0"><%= user.phone %></p>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <p class="mb-0 text-muted">Account Type</p>
          </div>
          <div class="col-sm-9">
            <p class="mb-0"><%= user.role === 'admin' ? 'Administrator' : 'User' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 