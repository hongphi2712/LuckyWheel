<h2  class="mb-4">Spin Reports</h2>

<div class="card border-0 shadow">
  <div class="card-body p-0">
    <% if (spinResults.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Date</th>
              <th>User</th>
              <th>Phone</th>
              <th>Campaign</th>
              <th>Prize</th>
            </tr>
          </thead>
          <tbody>
            <% spinResults.forEach(result => { %>
              <tr>
                <td><%= new Date(result.createdAt).toLocaleString() %></td>
                <td><%= result.user ? result.user.name : 'Guest' %></td>
                <td><%= result.phone || (result.user ? result.user.phone : 'N/A') %></td>
                <td><%= result.campaign ? result.campaign.name : 'N/A' %></td>
                <td><%= result.prize.name %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <div class="mb-3">
          <i class="fas fa-chart-bar fa-3x text-muted"></i>
        </div>
        <h4 class="text-muted">No spin data found</h4>
        <p>Users haven't participated in any campaigns yet.</p>
      </div>
    <% } %>
  </div>
</div>
 