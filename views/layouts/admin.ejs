<!DOCTYPE  html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Admin - LuckyWheel</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin.css">
  
  <!-- Favicon -->
  <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
</head>
<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar bg-dark text-white">
      <div class="sidebar-brand">
        <i class="fas fa-gift me-2"></i>LuckyWheel
      </div>
      <hr class="sidebar-divider">
      <div class="sidebar-items">
        <a href="/admin/dashboard" class="sidebar-item">
          <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </a>
        <a href="/admin/campaigns" class="sidebar-item">
          <i class="fas fa-trophy me-2"></i>Campaigns
        </a>
        <a href="/admin/users" class="sidebar-item">
          <i class="fas fa-users me-2"></i>Users
        </a>
        <a href="/admin/reports" class="sidebar-item">
          <i class="fas fa-chart-bar me-2"></i>Reports
        </a>
        <hr class="sidebar-divider">
        <a href="/user/logout" class="sidebar-item">
          <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="content-wrapper">
      <!-- Topbar -->
      <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 shadow">
        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
          <i class="fa fa-bars"></i>
        </button>
        
        <ul class="navbar-nav ml-auto">
          <% if (user) { %>
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small"><%= user.name %></span>
                <i class="fas fa-user-circle fa-fw"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="/user/logout">
                  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Logout
                </a>
              </div>
            </li>
          <% } %>
        </ul>
      </nav>
      
      <!-- Page Content -->
      <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800"><%= title %></h1>
        
        <%- include('../partials/flash-messages') %>
        <%- body %>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Admin JS -->
  <script src="/js/admin.js"></script>
</body>
</html>
 